@using Bb.WebClient.UIComponents


@if (Menu != null)
{
    // Add feature roles
    @if (Menu.Count > 0)
    {

        <MudNavGroup Title="@Menu.Display">
        @foreach (var subMenu in Menu)
        {
            <DynamicServerMenuComponent Menu="@subMenu" />
        }
        </MudNavGroup>

    }
    else
    {

        <MudNavLink 
            Href="@Menu.Action.HRef"
            Match="@Menu.Action.Match"    
            Icon="@Menu.Icon"
            Disabled="false">@Menu.Display</MudNavLink>
    }

}
